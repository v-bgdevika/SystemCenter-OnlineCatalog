<?xml version="1.0" encoding="utf-8" ?>
<Resources>
  <Section Name="Dashboard">
    <!-- Dashboard related -->
    <Import Source="View.Common.Resources.xml" Section="Alerts.Resources"/>
    <Resource Name="GridHeaders" Type="ArrayOfString">
      <Item>Severity</Item>
      <Item>Name</Item>
      <Item>Source</Item>
      <Item>Created</Item>
      <Item>Age</Item>
    </Resource>
    <Resource Name="ColumnMapping" Type="ListOfKeyValuePairStringString">
      <Item>Name</Item>
      <Item>Name</Item>
      <Item>MonitoringObjectDisplayName</Item>
      <Item>Source</Item>
    </Resource>

    <Resource Name="NodeDashboard.Title" Type="MPDisplayString">
      <Item>Microsoft.SystemCenter.Visualization.Network.Dashboard!MsScVsNtDb.CriticalTargettedAlertsViewForNodeDashboardTitle</Item>
    </Resource>
  </Section>

  <!-- Alerts View related -->
  <Section Name="AlertsView">
    <Import Source="View.Common.Resources.xml" Section="Alerts.Resources"/>
    <Resource Name="Title" Type="String">
      <Item>Active Alerts Generated by this Node</Item>
    </Resource>
    <Resource Name="GridHeaders" Type="ArrayOfString">
      <Item>Severity</Item>
      <Item>Name</Item>
      <Item>Source</Item>
      <Item>Created</Item>
      <Item>Age</Item>
    </Resource>
    <Resource Name="ColumnMapping" Type="ListOfKeyValuePairStringString">
      <Item>Name</Item>
      <Item>Name</Item>
      <Item>MonitoringObjectDisplayName</Item>
      <Item>Source</Item>
    </Resource>
    <!--<Resource Name="ActualColumnMapping" Type="CDATA">
      <Item>
        <![CDATA[
        <ColumnMappings>
          <column source="Name" destination="Name" />
          <column source="MonitoringObjectDisplayName" destination="Source" />
        </ColumnMappings>
      ]]>
      </Item>
    </Resource>
    <Resource Name="FilterExpectedAlertData" Type="CDATA">
      <Item>
        <![CDATA[(DisplayName <> 'Severity') and (DisplayName <> 'Created') and (DisplayName <> 'Target') and (DisplayName <> 'Name')]]>
      </Item>
    </Resource>
    <Resource Name="FilterActualAlertData" Type="CDATA">
      <Item>
        <![CDATA[(PropertyName <> 'Severity') and (PropertyName <> 'Created') and (PropertyName <> 'Target')]]>
      </Item>
    </Resource>-->
  </Section>

  <!-- Alert details related -->
  <Section Name="AlertDetailsView">
    <Resource Name="Title" Type="MPDisplayString">
      <Item>Microsoft.SystemCenter.Visualization.Network.Dashboard!MsScVsNtDb.DetailsForTheSelectedAlertTitle</Item>
    </Resource>
    <Resource Name="ProjectionColumns" Type="ListOfString">
      <Item>Name</Item>
      <Item>SeverityWithDisplayName</Item>
      <Item>MonitoringObjectDisplayName</Item>
      <Item>MonitoringObjectPath</Item>
      <Item>TargetDisplayName</Item>
      <Item>TimeRaised</Item>
      <Item>Description</Item>
    </Resource>
    <Resource Name="ColumnMapping" Type="CDATA">
      <Item>
        <![CDATA[
        <ColumnMappings>
          <column source="DisplayName" destination="PropertyName" />
          <column source="Value" destination="PropertyValue" />
        </ColumnMappings>
      ]]>
      </Item>
    </Resource>
    <Resource Name="FilterExpectedData" Type="CDATA">
      <Item>
        <![CDATA[(DisplayName <> 'Severity') and (DisplayName <> 'Created') and (DisplayName <> 'Target') and (DisplayName <> 'Name')]]>
      </Item>
    </Resource>
    <Resource Name="FilterActualData" Type="CDATA">
      <Item>
        <![CDATA[(PropertyName <> 'Severity') and (PropertyName <> 'Created') and (PropertyName <> 'Target')]]>
      </Item>
    </Resource>
  </Section>
</Resources>